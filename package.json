{
  "name": "root",
  "private": true,
  "scripts": {
    "lerna": "lerna publish -m \":rocket: publish\""
  },
  "devDependencies": {
    "eslint": "^6.2.1",
    "eslint-config-prettier": "^6.1.0",
    "husky": "^3.0.4",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.3",
    "prettier": "^1.18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,css,html}": [
      "prettier --single-quote --write",
      "git add"
    ],
    "yarn.lock": [
      "git rm --cached"
    ]
  }
}
